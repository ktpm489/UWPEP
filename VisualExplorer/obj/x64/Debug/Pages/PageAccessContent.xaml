<local:ThemePage x:ConnectionId='1'
    x:Class="VisualExplorer.Pages.PageAccessContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VisualExplorer.Pages.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:MSControls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:navigation="using:VisualExplorer.Model.Navigation"
                                                               
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="ExpanderGridViewItemStyle" TargetType="GridViewItem">
            <Setter Property="Width" Value="200"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
    </Page.Resources>

    <Grid Background="{ThemeResource DefaultAcrylicBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <RelativePanel Grid.Row="0">
            <TextBlock Text="Navigation" FontSize="40" Margin="20,10,10,10" Foreground="{ThemeResource FontColor}"/>
            <Button x:ConnectionId='15' Name="AccessGroupAppendBtn" Content="&#xE948;" FontSize="25" FontFamily="{StaticResource SymbolThemeFontFamily}" Foreground="{ThemeResource CommonForeground}" Background="Transparent" RelativePanel.AlignRightWithPanel="True" Margin="0,0,20,0" RelativePanel.AlignVerticalCenterWithPanel="True"
                                                      />
        </RelativePanel>

        <MSControls:Expander x:ConnectionId='2' x:Name="HDD_Expander" Grid.Row="1" Padding="0" Header="Devices and Drivers" 
                             Foreground="{ThemeResource FontColor}" Background="Transparent"
                             IsExpanded="True" HorizontalContentAlignment="Stretch">
            <MSControls:Expander.HeaderTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                        <TextBlock Text="Device and Drives" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20"/>
                        <Button x:ConnectionId='11' Name="DeviceAppendBtn" Content="&#xE8EC;" FontSize="20" Background="Transparent" FontFamily="{StaticResource SymbolThemeFontFamily}" VerticalAlignment="Center" Margin="20,0,0,0" Padding="0"
                                                     />
                    </StackPanel>
                </DataTemplate>
            </MSControls:Expander.HeaderTemplate>
            <GridView x:ConnectionId='12' Name="DevicesGirdView"                                    IsItemClickEnabled="True" Margin="10,10,0,0"
                      ItemContainerStyle="{StaticResource ExpanderGridViewItemStyle}" 
                                                    >
                <GridView.ItemTemplate>
                    <DataTemplate                                          >
                        <StackPanel x:ConnectionId='13' Orientation="Horizontal" Margin="5">
                            <Image Source="/Assets/IMAGE/IMAGE_DISK.png" Width="50" Height="50" Stretch="UniformToFill"/>
                            <TextBlock x:ConnectionId='14'                             VerticalAlignment="Center" FontSize="17" Margin="5,0,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </MSControls:Expander>

        <ListView x:ConnectionId='3' Grid.Row="2" Name="AccessGroupListView"                                     Padding="0" IsItemClickEnabled="False" SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate                                                   >
                    <MSControls:Expander x:ConnectionId='4' Name="GroupExpander"                         
                                         Foreground="{ThemeResource FontColor}" Background="Transparent"
                                         HorizontalContentAlignment="Stretch"                               >
                        <MSControls:Expander.HeaderTemplate>
                            <DataTemplate                      >
                                <StackPanel x:ConnectionId='5' Orientation="Horizontal" HorizontalAlignment="Stretch">
                                    <TextBlock x:ConnectionId='6'                 HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20"/>
                                    <Button x:ConnectionId='7' Name="AccessItemAppendBtn" Content="&#xE8EC;" FontSize="20" Background="Transparent" FontFamily="{StaticResource SymbolThemeFontFamily}" VerticalAlignment="Center" Margin="20,0,0,0" Padding="0"
                                                                             />
                                </StackPanel>
                            </DataTemplate>
                        </MSControls:Expander.HeaderTemplate>
                        <GridView x:ConnectionId='8' Name="DevicesGirdView"                                  IsItemClickEnabled="True" Margin="10,10,0,0"
                                  ItemContainerStyle="{StaticResource ExpanderGridViewItemStyle}"
                                                                >
                            <GridView.ItemTemplate>
                                <DataTemplate                                        >
                                    <StackPanel x:ConnectionId='9' Orientation="Horizontal" Margin="5">
                                        <Image Source="/Assets/IMAGE/IMAGE_TAG.png" Width="50" Height="50" Stretch="Uniform"/>
                                        <TextBlock x:ConnectionId='10'                             VerticalAlignment="Center" FontSize="17" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </MSControls:Expander>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="0"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>


    </Grid>
    
</local:ThemePage>

